<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.p3l_ajr_0171.entity.Transaksi" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@{data.idTransaksiGenerated}"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="13"
                android:layout_marginStart="7dp"
                android:rowOrderPreserved="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/nama_mobil"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNamaMbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:fontFamily="@font/inter_regular"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:text=""
                    android:hint="@string/nama_mobil"/>

                <TextView
                    android:id="@+id/namaDrv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_driver"
                    android:fontFamily="@font/inter_regular"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNamaDrv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text=""
                    android:hint="@string/nama_driver"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/tanggal_sewa"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTglSewaAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.tglSewaAwalStr}"
                    android:hint="@string/tanggal_sewa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tanggal_selesai_sewa"
                    android:layout_rowWeight="1"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tvTglSewaAkhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:fontFamily="@font/inter_regular"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:text="@{data.tglSewaAkhirStr}"
                    android:hint="@string/tanggal_selesai_sewa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@string/metode_pembayaran"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvMetodePembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.metodePembayaran}"
                    android:hint="@string/metode_pembayaran"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sub_total"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.subTotalStr}"
                    android:hint="@string/sub_total"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_pegawai"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNamaPgw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text=""
                    android:hint="@string/nama_pegawai"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kode_promo"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvKodePromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text=""
                    android:hint="@string/kode_promo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tanggal_pengembalian"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTglPengembalian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.tglPengembalianStr}"
                    android:hint="@string/tanggal_pengembalian"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_transaksi"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvStatusTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.statusTransaksi}"
                    android:hint="@string/status_transaksi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_harga"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.totalHargaAkhirStr}"
                    android:hint="@string/total_harga"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating_driver"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvRatingDrv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.ratingDriverStr}"
                    android:hint="@string/rating_driver"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating_perusahaan"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvRatingPerus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@{data.ratingPerusahaanStr}"
                    android:hint="@string/rating_perusahaan"/>

            </GridLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>